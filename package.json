{
  "name": "christinadan-11ty",
  "version": "1.0.0",
  "description": "A personal site for Christina Dan",
  "main": "index.js",
  "scripts": {
    "build": "gulp && ELEVENTY_ENV=prod eleventy",
    "start": "gulp && eleventy && concurrently \"gulp watch\" \"eleventy --serve --incremental\"",
    "start:dev": "concurrently \"gulp watch\" \"ELEVENTY_ENV=dev eleventy --serve --incremental\"",
    "debug": "DEBUG=* eleventy",
    "format": "prettier '**/*.js' --write && eslint '**/*.js' --fix",
    "lint": "eslint **/*.js --fix"
  },
  "author": {
    "name": "Christina Dan",
    "email": "hello@christinadan.com",
    "url": "https://christinadan.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/christinadan/christinadan-11ty"
  },
  "dependencies": {
    "@11ty/eleventy-img": "git+https://github.com/christinadan/eleventy-img.git",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "clean-css": "^4.2.3",
    "dotenv": "^8.2.0",
    "html-minifier": "^4.0.0",
    "image-size": "^0.9.3",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "markdown-it": "^11.0.1",
    "markdown-it-anchor": "^6.0.0",
    "markdown-it-attrs": "^3.0.3",
    "markdown-it-link-attributes": "^3.0.0",
    "node-fetch": "^2.6.1",
    "path": "^0.12.7",
    "sanitize-html": "^2.1.2",
    "sharp": "^0.26.2",
    "slugify": "^1.4.6",
    "smartcrop": "^2.0.3",
    "smartcrop-sharp": "^2.0.3",
    "store-css": "^1.0.2",
    "terser": "^5.3.8"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@babel/core": "^7.12.3",
    "concurrently": "^5.3.0",
    "del": "^5.1.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.0",
    "gulp": "^4.0.2",
    "gulp-better-rollup": "^4.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-flatmap": "^1.0.2",
    "gulp-header": "^2.0.9",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-svgmin": "^3.0.0",
    "gulp-terser": "^1.4.1",
    "husky": "^4.3.0",
    "lazypipe": "^1.0.2",
    "lint-staged": "^10.5.1",
    "path": "^0.12.7",
    "prettier": "^2.1.2",
    "rollup": "^2.70.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.29.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
